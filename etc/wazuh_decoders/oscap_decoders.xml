<!--
OpenSCAP
Logs from syslog.
-->
<decoder name="oscap">
    <program_name>oscap</program_name>
</decoder>

<!--
OpenSCAP
Logs from wodle
-->
<decoder name="oscap">
  <prematch>oscap: </prematch>
</decoder>


<!--
Rule Result
oscap: msg: "rule-result", policy: "ssg-centos7-ds.xml", profile: "xccdf_org.ssgproject.content_profile_pci-dss", rule_id: "xccdf_org.ssgproject.content_rule_aide_periodic_cron_checking", result: "fail", title: "Configure Periodic Execution of AIDE", ident: "CCE-RHEL7-CCE-TBD", severity: "medium".
-->
<decoder name="oscap-wodle-rule-result">
  <parent>oscap</parent>
  <prematch offset="after_parent">^msg: "rule-result"</prematch>
  <regex offset="after_prematch">^, policy: "(\S+)", profile: "(\S+)", rule_id: "(\S+)", result: "(\S+)", title: "(\.+)", ident: "(\.+)", severity: "(\S+)".$</regex>
  <order>srcuser, protocol, extra_data, status, url, id, action</order>
</decoder>

<!--
Report overview
oscap: msg: "report-overview", policy: "ssg-centos7-ds.xml", profile: "xccdf_org.ssgproject.content_profile_pci-dss", score: "56.835060" / "100.000000", severity of failed rules: "high": "1", "medium": "9", "low": "34", "n/a": "0".
-->
<decoder name="oscap-wodle-repor-overview">
  <parent>oscap</parent>
  <prematch offset="after_parent">^msg: "report-overview"</prematch>
  <regex offset="after_prematch">^, policy: "(\S+)", profile: "(\S+)", score: "(\S+)" /</regex>
  <order>srcuser, protocol, status</order>
</decoder>

<!--
Apr 12 10:50:32 centos oscap: Evaluation started. Content: /usr/share/xml/scap/ssg/content/ssg-centos7-ds.xml, Profile: xccdf_org.ssgproject.content_profile_standard.
-->
<decoder name="oscap-eval-start">
    <parent>oscap</parent>
    <prematch offset="after_parent">^Evaluation started. </prematch>
    <regex offset="after_prematch">^Content: (\.+), Profile: (\S+).$</regex>
    <order>url, extra_data</order>
</decoder>

<!--
Apr 12 10:50:42 centos oscap: Evaluation finished. Return code: 0, Base score 100.000000.
-->
<decoder name="oscap-eval-finish">
    <parent>oscap</parent>
    <prematch offset="after_parent">^Evaluation finished. </prematch>
    <regex offset="after_prematch">^Return code: (\d+)</regex>
    <order>status</order>
</decoder>
