# TODO: Skip API configuration, remove after change workflow to use package
WAZUH_CONFIG_SKIP_API=true

# Sets the logging level.
WAZUH_LOG_LEVEL=error

# Sets the path to the folder where the assets are located (store).
WAZUH_STORE_PATH=ENV_PATH_PLACEHOLDER/store

# Sets the path to the KVDB folder.
WAZUH_KVDB_PATH=ENV_PATH_PLACEHOLDER/kvdb

# Sets configuration for the queue. (Disable flood, and disable drop on flood)
WAZUH_QUEUE_SIZE=1000000
WAZUH_QUEUE_FLOOD_FILE=
WAZUH_QUEUE_DROP_ON_FLOOD=false

# Sets the number of threads to be used by the router.
WAZUH_ORCHESTRATOR_THREADS=2

# Set the server configuration
WAZUH_SERVER_THREAD_POOL_SIZE=2
WAZUH_SERVER_EVENT_SOCKET=ENV_PATH_PLACEHOLDER/queue/sockets/queue
WAZUH_SERVER_EVENT_QUEUE_SIZE=0
WAZUH_SERVER_API_SOCKET=ENV_PATH_PLACEHOLDER/queue/sockets/engine-api
WAZUH_SERVER_API_QUEUE_SIZE=300
WAZUH_SERVER_API_TIMEOUT=10000

# New server HTTP configuration
WAZUH_API_SERVER_SOCKET=ENV_PATH_PLACEHOLDER/queue/sockets/api.sock

# Sets the install path to the time zone database.
WAZUH_TZDB_PATH=ENV_PATH_PLACEHOLDER/tzdb
WAZUH_TZDB_AUTO_UPDATE=false
