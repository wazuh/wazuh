{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ports Schema for test tool",
    "type": "object",
    "properties": {
        "ports": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "file_inode": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "source_ip": {
                        "type": "string",
                        "anyOf": [
                            {
                                "format": "ipv4"
                            },
                            {
                                "format": "ipv6"
                            }
                        ]
                    },
                    "source_port": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "process_pid": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "process_name": {
                        "type": "string"
                    },
                    "network_transport": {
                        "type": "string",
                        "enum": [
                            "udp",
                            "udp6",
                            "tcp",
                            "tcp6"
                        ]
                    },
                    "destination_ip": {
                        "type": "string",
                        "anyOf": [
                            {
                                "format": "ipv4"
                            },
                            {
                                "format": "ipv6"
                            }
                        ]
                    },
                    "destination_port": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "host_network_ingress_queue": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "interface_state": {
                        "type": "string"
                    },
                    "host_network_egress_queue": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "required": [
                    "file_inode",
                    "source_ip",
                    "source_port",
                    "process_pid",
                    "process_name",
                    "network_transport",
                    "destination_ip",
                    "destination_port",
                    "host_network_ingress_queue",
                    "interface_state",
                    "host_network_egress_queue"
                ]
            }
        }
    },
    "required": [
        "ports"
    ]
}
