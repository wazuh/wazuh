<decoder name="docker">
        <prematch>^time="\d+-\d+-\d+T\d+:\d+:\d+.\d+\w" level=\S+ msg="</prematch>
        <regex>level=(\S+) msg="(\.+)"</regex>
        <order>docker.level,docker.message</order>
</decoder>

